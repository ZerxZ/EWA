:: 试衣间
<span class="title">服装店</span><br>
<div class="lbox">
商场里的服装店。商品琳琅满目，什么都有。<br>
</div>

<<EnterTryRoom>>


<div id="show_container">
    <<if $showcase isnot null>><<ShowCase>><</if>>  
</div>

<<set _shop to ["all","offline"]>>
<<set _placeholder to "image/avatar/thumb.png">>
<<set _table to []>>

<div id="ShopList">
  <ul>
    <li class="category"><a href="#hat">头饰</a></li>
    <li class="category"><a href="#outter">外套</a></li>
    <li class="category"><a href="#top">上装</a></li>
    <li class="category"><a href="#bottom">下装</a></li>
    <li class="category"><a href="#inner_up">内衣</a></li>
    <li class="category"><a href="#inner_bt">内裤</a></li>
    <li class="category"><a href="#legs">袜子</a></li>
    <li class="category"><a href="#shoes">鞋子</a></li>
    <li class="category"><a href="#accesory">饰品</a></li>
  </ul>
    
    <div id="hat">
        <<for _i to 0; _i lt Avatars.hat.length; _i ++>>
            <<if A.hat[_i].shop is null or _shop.includes(A.hat[_i].shop) is false>>
                <<continue>>
            <<else>>
                <<if Avatars.hat[_i].imgenable is true>>
                    <<set _img to "image/avatar/hat/" + A.hat[_i].index + "/thumb.png">>
                <<else>>
                    <<set _img to _placeholder>>
                <</if>>
                 <div class="show_items">
                    <div class="itemthumb"><<print "<<link [img[_img]]>><<run setShowCase(A.hat["+_i+"])>><</link>>">></div>
                    <div class="itemname"><<print A.hat[_i].name>></div>
                    <div class="itemprice">￥<<print A.hat[_i].cost>></div>
                </div>
            <</if>>
        <</for>>
    </div>

